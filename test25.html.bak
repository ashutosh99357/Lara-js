<form action = "success.html">
First Name :<input type="text" name = "firstName"/> <br>
CC number :<input type="password" name = "cardnumber"/> <br>
Address : 
<textarea cols = "15" rows="4" name="address"></textarea> <br>
<input type="submit" value="submit" onclick = "return validate()"/>
</form>
<script>
function validate()
{
	var f1 = document.form[0]
	var fName=f1.firstName
	if(fName.value.length == 0)
	{
		alert("enter fName")
		fName.focus()
		return false
	}
	var cNum=f1.cardnumber
	if(cNum.value.length == 0)
	{
		alert("enter cNum")
		cNum.focus()
		return false
	}
	var address = f1.address
	if(address.value.length == 0)
	{
		alert("enter address")
		address.focus()
		return false
	}
	return true
	
}
</script>